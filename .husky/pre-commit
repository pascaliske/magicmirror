#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# check if vault is encrypted
if (cat ansible/vars/vault.yml | grep -q "\$ANSIBLE_VAULT;"); then
    echo "Vault Encrypted. Safe to commit."
else
    echo "Vault not encrypted! Run 'yr vault:encrypt' and try again."
    exit 1
fi

# lint-staged
yarn lint-staged
